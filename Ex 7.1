    def __init__(self, x, y, z):
        self.x = x
        self.y = y
        self.z = z
    def __repr__(self):
        return 'Vector ({}, {}, {})'.format(self.x, self.y, self.z)
        
    def find_axis(v1,v2):
        if v1.x == v2.x and v1.y == v2.y and v1.z == v2.z:
            raise ValueError ("Wektor jest równoległy")
        elif v1.x == 0 and v1.y == 0 and v1.z == 0:
            raise ValueError ("Wektor jest równoległy")
        elif v2.x == 0 and v2.y == 0 and v2.z == 0:
            raise ValueError ("Wektor jest równoległy")
        else:
            return Vector (v1.y * v2.z - v1.z * v2.y,
                          v1.z * v2.x - v1.x * v2.z,
                          v1.x * v2.y - v1.y * v2.x)
                          
